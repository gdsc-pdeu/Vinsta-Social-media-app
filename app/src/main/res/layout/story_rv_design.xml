<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/profile_image_in_story"
        android:layout_width="@dimen/_56mdp"
        android:layout_height="@dimen/_56mdp"
        android:layout_marginEnd="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:riv_border_color="#9320b3"
        app:riv_border_width="3dip"
        app:riv_corner_radius="28dip"
        app:riv_mutate_background="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Vipul"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/profile_image_in_story"
        app:layout_constraintEnd_toEndOf="@id/profile_image_in_story"
        app:layout_constraintTop_toBottomOf="@id/profile_image_in_story"/>
</androidx.constraintlayout.widget.ConstraintLayout>